<div class="{{tabs.cards.tabCssClass}}" data-group="primary" data-tab="cards">
  <input type="search" placeholder="{{localize 'SIDEBAR.Search' types=(localize 'DOCUMENT.Cards')}}">
  <header class="header">
    {{#if isPile}}
    <span class="sort"></span>
    {{else}}
    <a class="sort" data-tooltip="CARDS.ACTIONS.ToggleSortMode" data-action="toggleSort">
      <i class="fa-solid fa-sort fa-fw"></i>
    </a>
    {{/if}}
    <span class="name">{{localize "Name"}}</span>
    <span class="type">{{localize "DOCUMENT.FIELDS.type.label"}}</span>
    <span class="suit">{{localize "CARD.FIELDS.suit.label"}}</span>
    <span class="value">{{localize "CARD.FIELDS.value.label"}}</span>
    {{#if isDeck}}
    <span class="drawn">{{localize "CARD.FIELDS.drawn.label"}}</span>
    {{/if}}
    <span class="face">{{localize "CARD.FIELDS.face.label"}}</span>
    {{#if isDeck}}
    <a class="controls" data-tooltip="CARDS.ACTIONS.Create" data-action="createCard">
      <i class="fa-solid fa-plus"></i>
      {{localize "CCM.CardSheet.Add"}}
    </a>
    {{/if}}
  </header>

  <ol class="cards">
    {{#each cards}}
    <li class="card" data-card-id="{{card.id}}">
      <span class="sort">
        {{#if @root.isDeck}}
        <a data-action="viewCard">
          <i class="fa-solid fa-eye"></i>
        </a>
        {{else}}
        <a data-action="playCard">
          <i class="fa-solid fa-circle-play"></i>
        </a>
        {{/if}}
        <img src="{{card.img}}" alt="{{card.name}}">
      </span>
      <span class="name">{{card.name}}</span>
      <span class="type">{{type}}</span>
      <span class="suit">{{suit}}</span>
      <span class="value">{{value}}</span>
      {{#if @root.isDeck}}
      {{#if card.drawn}}
      <a class="drawn" data-action="recallCard" data-tooltip="CCM.CardSheet.RecallCard">
        <i class="fa-solid fa-recycle"></i>
      </a>
      {{else}}
      <span class="drawn"></span>
      {{/if}}
      {{/if}}
      <span class="face">
        <a data-action="nextFace" data-tooltip="CARDS.ACTIONS.NextFace" {{#unless card.hasNextFace}}disabled{{/unless}}>
          <i class="fa-solid fa-caret-up"></i>
        </a>
        <a data-action="previousFace" data-tooltip="CARDS.ACTIONS.PreviousFace" {{#unless card.hasPreviousFace}}disabled{{/unless}}>
          <i class="fa-solid fa-caret-down"></i>
        </a>
      </span>
      {{#if @root.isDeck}}
      <span class="controls">
        <a data-action="editCard" data-tooltip="CARDS.ACTIONS.Edit">
          <i class="fa-solid fa-edit"></i>
        </a>
        <a data-action="deleteCard" data-tooltip="CARDS.ACTIONS.Delete">
          <i class="fa-solid fa-trash"></i>
        </a>
      </span>
      {{/if}}
    </li>
    {{/each}}
  </ol>
</div>
