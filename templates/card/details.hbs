<div class="{{tabs.details.tabCssClass}}" data-group="primary" data-tab="details">
  {{formGroup type.field localize=true label=type.label value=type.value sort=false choices=type.choices}}
  {{formGroup suit.field localize=true value=suit.value}}
  {{formGroup value.field localize=true value=value.value}}

  <div class="form-group">
    <label>{{localize "CARD.Dimensions"}}</label>
    <div class="form-fields">
      {{formInput width.field localize=true value=width.value placeholder=width.placeholder}}
      {{formInput height.field localize=true value=height.value placeholder=height.placeholder}}
      {{formInput rotation.field localize=true value=rotation.value placeholder=rotation.placeholder}}
    </div>
  </div>

  {{formGroup description.field localize=true enriched=description.enriched value=description.value button=true toggled=false}}
</div>
